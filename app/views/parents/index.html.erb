<% content_for(:html_title) { "Parent Dashboard" } %>
<%= stylesheet_link_tag    'events', media: 'all' %>

<div class="container">
  <!-- Example row of columns -->
  <div class="jumbotron">
    <div class="container mb">
      <h1 class="display-3 ">Welcome, <%= @current_user.first_name %></h1>
      <p>Click the button below to see upcoming events.</p>
      <%= link_to "Upcoming Events", events_path, class: "btn btn-primary btn-lg"%>
    </div>
  </div>
  <div>
    <% unless @pending_requests.empty? %>
      <table class="table text-center mt-4">
        <tr class="table-warning">
          <td class="h5">You have medication requests awaiting your approval.</td>
          <td><%= link_to "View Requests for Approval", requests_path, class: "btn btn-warning profile-button", id: 'view-requests' %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="album py-5">
    <div class="container homeContainer">
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Past Events</h2>
            <%= link_to "Past Events", parents_path, class: "btn btn-secondary"%>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>View Parents and Students</h2>
              <%= link_to "People", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>See Medication Information</h2>
            <%= link_to "All Medications", medications_path, class: "btn btn-secondary"%>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Request Medication</h2>
              <%= link_to "Request Medication", new_request_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Create a Form</h2>
              <%= link_to "New Form", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Forms</h2>
            <%= link_to "Forms", forms_parent_view_path, class: "btn btn-secondary"%>
          </div>
        </div>
      </div>
    </div>
    <hr>

  </div> <!-- /container -->
</div>