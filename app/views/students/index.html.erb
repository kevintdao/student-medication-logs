<div class="container">
  <!-- Example row of columns -->
  <div class="jumbotron">
    <div class="container mb">
      <h1 class="display-3 ">Welcome, <%= @current_user.first_name %></h1>
      <p>Click the button below to see upcoming events.</p>
      <%= link_to "Upcoming Events", events_path, class: "btn btn-primary btn-lg"%>
    </div>
  </div>

  <div class="album py-5">
    <div class="container homeContainer">
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Past Events</h2>
            <%= link_to "Past Events", students_path, class: "btn btn-secondary"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Parents and Students</h2>
            <%= link_to "People", students_path, class: "btn btn-secondary"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>See Medication Information</h2>
            <%= link_to "All Medications", medications_path, class: "btn btn-secondary"%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>Create an Event</h2>
            <%= link_to "New Event", students_path, class: "btn btn-secondary"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>Create a Form</h2>
            <%= link_to "New Form", students_path, class: "btn btn-secondary"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Forms</h2>
            <%= link_to "Forms", students_path, class: "btn btn-secondary"%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>

</div> <!-- /container -->
