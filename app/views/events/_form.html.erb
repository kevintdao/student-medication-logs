<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-2">
    <%= f.label :time %><br>
    <%= f.datetime_select :time, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :student_id %><br>
    <% @students.unshift('') %>
    <%= f.select :student_id, @students, {}, { class: "form-select", onchange: "getMedications(this.value)" } %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :med_id, "Medication ID" %><br>
    <%#= render 'medications' %>
    <%= f.number_field :med_id, class: "form-control", onkeyup: "checkMedication(this)" %>
  </div>
  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :complete %><br>
    <%= f.check_box :complete %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
  <%= f.hidden_field :district, value: @current_user.district_id %>
  <div class="actions mb-2">
    <%= f.submit 'Create Event', class: "btn btn-primary", id: 'submit', disabled: 'true' %>
    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
  </div>
<% end %>
