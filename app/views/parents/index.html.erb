<head>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
</head>
<body>
  <div class="container">
    <% if @pending_requests.length > 0 %>
      <table class="table text-center mt-4">
        <tr class="table-warning">
          <td class="h5">You have pending requests.</td>
          <td><%= link_to "View Requests for Approval", requests_path, class: "btn btn-warning profile-button" %></td>
        </tr>
      </table>
    <% end %>
    <!-- Example row of columns -->
    <div class="album py-5">
      <div class="container homeContainer">
        <div class="row">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>View Past Events</h2>
              <%= link_to "Past Events", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>View Parents and Students</h2>
              <%= link_to "People", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>See Medication Information</h2>
              <%= link_to "Medications", medications_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Request Medication</h2>
              <%= link_to "Request Medication", new_request_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Create a Form</h2>
              <%= link_to "New Form", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>View Forms</h2>
              <%= link_to "Forms", parents_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>

  </div> <!-- /container -->
</body>
