<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Time1</th>
      <th>Time2</th>
      <th>Time3</th>
      <th>Time4</th>
      <th>Daily doses</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Student</th>
      <th>Requestor</th>
      <th>Med</th>
      <th>District</th>
      <th>Notes</th>
      <th>Parent approved</th>
      <th>Nurse approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.time1 %></td>
        <td><%= request.time2 %></td>
        <td><%= request.time3 %></td>
        <td><%= request.time4 %></td>
        <td><%= request.daily_doses %></td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.student_id %></td>
        <td><%= request.requestor_id %></td>
        <td><%= request.med_id %></td>
        <td><%= request.district_id %></td>
        <td><%= request.notes %></td>
        <td><%= request.parent_approved %></td>
        <td><%= request.nurse_approved %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

