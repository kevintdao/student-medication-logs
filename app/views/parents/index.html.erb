<head>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
  <link rel="stylesheet" href="style.css">
  <%= stylesheet_link_tag    'nurses', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
</head>
<body>
<div class="container">
  <!-- Example row of columns -->
  <div class="jumbotron">
    <div class="container mb">
      <h1 class="display-3 ">Welcome, <%= @current_user.first_name %></h1>
      <p>Click the button below to see upcoming events.</p>
      <%= link_to "Upcoming Events", events_path, class: "btn btn-primary btn-lg"%>
    </div>
  </div>
  <div>
    <% unless @pending_requests.empty? %>
      <table class="table text-center mt-4">
        <tr class="table-warning">
          <td class="h5">You have medication requests awaiting your approval.</td>
          <td><%= link_to "View Requests for Approval", requests_path, class: "btn btn-warning profile-button", id: 'view-requests' %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div>
    <% unless @pending_forms.empty? %>
      <table class="table text-center mt-4">
        <tr class="table-warning">
          <td class="h5">You have forms from your district pending your approval.</td>
          <td><%= link_to "View Forms for Approval", forms_parent_view_path, class: "btn btn-warning profile-button", id: 'view-forms' %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="album py-5">
    <div class="container homeContainer">
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Past Events</h2>
            <%= link_to "Past Events", parents_path, class: "btn btn-secondary"%>
          </div>
        </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Request Medication</h2>
              <%= link_to "Request Medication", new_request_path, class: "btn btn-secondary"%>
            </div>
          </div>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <h2>View Forms</h2>
            <%= link_to "Forms", forms_parent_view_path, class: "btn btn-secondary"%>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /container -->
</div>
</body>