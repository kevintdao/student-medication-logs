<head>
  <title>Selt2021Proj02 Medication Page</title>
  <%= stylesheet_link_tag    'medications', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag asset_path('favicon.ico') %>
</head>

<h1>Medications</h1>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th class="th-sm">Name
    </th>
    <th class="th-sm">Active Ingredient
    </th>
    <th class="th-sm">Form
    </th>
    <th class="th-sm">Strength
    </th>
    <th class="th-sm">Notes
    </th>
    <th class="th-sm">More Information
    </th>
  </tr>
  </thead>
  <tbody>
    <% @first50.each do |medication| %>
      <tr>
        <td><%= medication.brand_name %></td>
        <td><%= medication.active_ing %></td>
        <td><%= medication.method %></td>
        <td><%= medication.strength %></td>
        <td><%= medication.notes %></td>
        <td><%= link_to 'Show', medication %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Medication', new_medication_path %>
