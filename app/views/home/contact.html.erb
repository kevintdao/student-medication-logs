<% content_for(:html_title) { "Contact Us" } %>
<%= stylesheet_link_tag    'contact', media: 'all' %>

<!--Section: Contact v.2-->
<div class="container">
<section class="mb-4">

  <!--Section heading-->
  <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
  <!--Section description-->
  <p class="text-center w-responsive mx-auto mb-5">Further questions about SML? Our team is eager to get you answers. Fill out the form below and one of our representatives will get back to you.</p>
    <!--Grid column-->
      <%= form_for :message, :url => home_send_contact_message_path , :html => {:id => 'contact-form', :name => 'contact-form'} do |f|  %>
        <!--Grid row-->
        <div class="row">
            <div class="md-form mb-0">
              <%= f.label :name, "Your Name" %>
              <%= f.text_field :name, :html => {:id => "name", :name => "name"}, class: "form-control", :required => true, id: "name"%>
            </div>
        </div>

        <div class="row">
            <div class="md-form mb-0">
              <%= f.label :email, "Your Email" %>
              <%= f.email_field :email, :html => {:id => "email", :name => "email"}, class: "form-control", :required => true, id: "email" %>
            </div>
        </div>
        <!--Grid row-->

        <!--Grid row-->
        <div class="row">
            <div class="md-form mb-0">
              <%= f.label :subject, "Subject" %>
              <%= f.text_field :subject, :html => {:id => "subject", :name => "subject"}, class: "form-control", :required => true, id:"subject" %>
            </div>
        </div>
        <!--Grid row-->

        <!--Grid row-->
        <div class="row">

          <!--Grid column-->

            <div class="md-form">
              <%= f.label :message, "Message" %>
              <%= f.text_area :message, :html => {:id => "message", :name => "message"}, class: "form-control md-textarea", :required => true, id:"message" %>
            </div>

        </div>
        <!--Grid row-->
      <div class="text-center text-md-left">
        <%= f.submit :Submit, class: "btn btn-primary", id:"submit" %>
      </div>
    <% end %>

</section>
</div>
