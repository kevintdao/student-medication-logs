<p>
  <strong>ID:</strong>
  <%= @user.id %>
</p>
<p>
  <strong>Name:</strong>
  <%= @user.first_name + ' ' + @user.last_name %>
</p>
<p>
  <strong>Events:</strong>
</p>

<table class="table table-striped table-bordered table-sm mt-2">
  <thead>
    <tr>
      <th>Time</th>
      <th>Medication</th>
      <th>Completed</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.time %></td>
        <td><%= Medication.where(id: event.med_id).first.brand_name %></td>
        <td><%= event.complete ? "Complete" : "Incomplete" %></td>
        <td><%= event.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>


