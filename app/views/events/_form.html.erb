<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-2">
    <%= f.label :time %><br>
    <%= f.datetime_select :time, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :student_id %><br>
    <%= f.number_field :student_id, class: "form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :med_id, "Medication ID" %><br>
    <div class="input-group">
      <%= f.number_field :med_id, class: "form-control" %>
      <a id="paste-btn" class="btn btn-secondary input-group-append">Paste ID from Clipboard</a>
    </div>
  </div>
  <div class="form-group mb-2">
    <%= f.label :complete %><br>
    <%= f.check_box :complete %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
  <div class="actions mb-2">
    <%= f.submit 'Submit', class: "btn btn-primary" %>
    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
  </div>
<% end %>
