<% content_for(:html_title) { "Student Dashboard" } %>
<%= stylesheet_link_tag    'nurses', media: 'all' %>
<script src="https://kit.fontawesome.com/9c8e310799.js" crossorigin="anonymous"></script>


<main role="main">
  <div class="container">
    <!-- Example row of columns -->
    <div class="jumbotron">
      <div class="container mb">
        <h1 class="display-3 ">Welcome, <%= @current_user.first_name %></h1>
        <p>Click the button below to see upcoming events.</p>
        <%= link_to "Upcoming Events", events_student_view_path, class: "btn btn-primary btn-lg"%>
      </div>
    </div>
    <div class="album py-5">
      <div class="container homeContainer">
        <div class="row">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2 class="top-content">View Past Events</h2>
              <%= link_to "Past Events", events_student_past_events_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Request a Medication</h2>
              <%= link_to "New Request", new_request_path, class: "btn btn-secondary"%>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2>Pending Requests</h2>
              <%= link_to "View Requests", requests_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <h2 class="top-content">See Medication Information</h2>
              <%= link_to "All Medications", medications_path, class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>

  </div> <!-- /container -->

</body>
</main>
